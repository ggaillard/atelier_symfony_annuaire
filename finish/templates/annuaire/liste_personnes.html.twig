{% extends 'base.html.twig' %}

{% block title %}Liste des personnes{% endblock %}

{% block body %}
<style>
    .person-list { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .person-list ul { list-style-type: none; padding: 0; }
    .person-list li { background: #F5F5F5; margin: 0.5em 0; padding: 0.5em; border-radius: 4px; }
</style>

<div class="person-list">
    <h1>Liste des personnes</h1>
    <ul>
        {% if personnes is defined %}
            {% for personne in personnes %}
                <li>{{ personne.nom }} {{ personne.prenom }}</li>
            {% endfor %}
        {% else %}
            <li>Aucune personne trouv√©e.</li>
        {% endif %}
    </ul>
</div>
{% endblock %}
